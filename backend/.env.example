# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stock_portfolio
# Or separate connection parameters:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=username
# DB_PASSWORD=password
# DB_NAME=stock_portfolio

# Server Configuration
PORT=3001

# Stock API Configuration (choose one)
# Polygon.io API Key (free tier: 5 API calls/minute)
POLYGON_API_KEY=your_api_key_here

# Or Alpha Vantage API Key (free tier: 25 requests/day)
# ALPHA_VANTAGE_API_KEY=your_api_key_here

# Stock API Provider (alphavantage or polygon)
STOCK_API_PROVIDER=polygon

# Price cache expiration in minutes
PRICE_CACHE_EXPIRATION=15
